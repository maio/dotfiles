let mapleader = " "

set ideajoin
set commentary
set easymotion
set surround
set clipboard=unnamedplus,unnamed
set notimeout
set ttimeout

inoremap jk <ESC>l

nnoremap <leader>fp :e ~/.ideavimrc<CR>
nnoremap <leader>qr :source ~/.ideavimrc<CR>
nnoremap <leader>fs :w<CR>

nmap s <Plug>(easymotion-s)

nnoremap <leader><leader> :action GotoFile<CR>
nnoremap <leader>bb :action RecentFiles<CR>

nnoremap <leader>ra :action RunAnything<CR>
nnoremap <leader>rr :action Run<CR>
nnoremap <leader>rR :action RunContextGroup<CR>

nnoremap <leader>rm :action ExtractFunction<CR>
nnoremap <leader>ri :action IntroduceVariable<CR>
nnoremap <leader>rn :action Inline<CR>

nnoremap <leader>gg :action Tool_Apps_Magit<CR>

nnoremap <leader>ss :action FindInPath<CR>
nnoremap <leader>sp :action FindInPath<CR>

nnoremap <leader>ww :action HideAllWindows<CR>
nnoremap <leader>wmm :action Unsplit<CR>
nnoremap <leader>w/ :action SplitVertically<CR>
nmap <leader>wh <c-w>h
nmap <leader>wl <c-w>l

" Do not deselect visual block after (de)indent
vnoremap < <gv
vnoremap > >gv

nnoremap <Tab> %
vnoremap <Tab> %
omap <Tab> %

" Visual Block mode is far more useful that Visual mode (so swap them)...
nnoremap v <C-V>

nnoremap H ^
nnoremap L $
xnoremap H ^
xnoremap L $

nnoremap <a-l> e
nnoremap <a-h> b

